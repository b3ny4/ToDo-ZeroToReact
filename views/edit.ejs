<% layout('layout/boilerplate') %>
    <h1>Edit ToDo</h1>
    <form action="/<%= todo.id %>?_method=PUT" method="post">
        <div class="mb-3">
            <label for="todo" class="form-label">ToDo</label>
            <input type="text" class="form-control" id="todo" name="todo" value="<%= todo.content %>">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>